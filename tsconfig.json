{
    "compilerOptions": {
        "rootDir": "./",
        "lib": [
            "es6",
            "es2015.promise"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "skipLibCheck": true,
        "target": "es6"
    },
    
    "include": [
        "microservices/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "local-composer-cache",
        "provision"
    ]
}
{
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "defaultSeverity": "error",
    "rules": {
        "ban-types": [
            true,
            [
                "Object",
                "Use {} instead."
            ],
            [
                "String",
                "Use string (lowercase) instead."
            ]
        ],
        "interface-name": false,
        "no-shadowed-variable": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-console": false,
        "prefer-const": false,
        "eofline": false,
        "quotemark": [
            true,
            "single"
        ],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "trailing-comma": [
            true,
            {
                "esSpecCompliant": true,
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}